<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".meditation.MeditationMain"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/manImage"
        android:layout_width="399dp"
        android:layout_height="245dp"
        android:layout_marginTop="49dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/meditation_transparent"
        tools:ignore="ContentDescription" />


<!--    <ImageView-->
<!--        android:id="@+id/imageView2"-->
<!--        android:layout_width="72dp"-->
<!--        android:layout_height="60dp"-->
<!--        android:layout_marginBottom="24dp"-->
<!--        app:layout_constraintBottom_toTopOf="@id/button"-->
<!--        app:layout_constraintHorizontal_bias="0.5"-->
<!--        app:layout_constraintLeft_toLeftOf="parent"-->
<!--        app:layout_constraintRight_toRightOf="parent"-->
<!--        app:srcCompat="@drawable/icon"-->
<!--        tools:ignore="ContentDescription" />-->

    <Button
        android:id="@+id/button"

        android:layout_width="250dp"
        android:layout_height="64dp"
        android:layout_gravity="center"

        android:layout_marginVertical="32dp"
        android:layout_marginLeft="60dp"

        android:layout_marginRight="60dp"
        android:layout_marginBottom="64dp"
        android:background="@color/blue3"
        android:backgroundTint="@color/button"
        android:fontFamily="@font/montserrat_medium"
        android:onClick="getstart"
        android:text="@string/get_started"


        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"


        app:layout_constraintEnd_toEndOf="@+id/imageView"

        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/montserratbold"
        android:text="SERENE"
        android:textColor="@color/blue3"
        android:textSize="36sp"
        app:layout_constraintHorizontal_bias="0.498"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/manImage" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="314dp"
        android:layout_height="140dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="“Peace cannot be kept by force it can be achieved by understanding.”"
        android:textColor="@color/blue3"
        android:textSize="24sp"

        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2" />


</androidx.constraintlayout.widget.ConstraintLayout>

