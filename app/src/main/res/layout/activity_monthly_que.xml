<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".montly_quiz.MQuiz">
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginTop="16dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="10"
        android:progress="0"
        android:progressDrawable="@drawable/progress_bar_custom_q"/>
    <TextView
        android:id="@+id/question_text_view_n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question 1"

        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_medium"

        android:textSize="20sp"/>
    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question 1"

        android:textStyle="bold"
        android:textColor="@color/blue3"
        android:fontFamily="@font/montserrat_medium"

        android:textSize="18sp"/>
    <TextView
        android:id="@+id/question_text_view_n3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question 1"

        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_medium"

        android:textSize="20sp"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/questions_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        android:layout_marginHorizontal="30dp">
    <RadioGroup
        android:id="@+id/answer_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/answer_1_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer 1"
            android:fontFamily="@font/montserrat_medium"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/blue3"/>

        <RadioButton
            android:id="@+id/answer_2_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer 2"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_gravity="center"
            android:textColor="@color/blue3"/>

        <RadioButton
            android:id="@+id/answer_3_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer 3"
            android:fontFamily="@font/montserrat_medium"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/blue3"/>

        <RadioButton
            android:id="@+id/answer_4_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer 4"
            android:fontFamily="@font/montserrat_medium"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/blue3"/>

        <RadioButton
            android:id="@+id/answer_5_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Answer 5"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="20sp"
            android:textColor="@color/blue3"/>

    </RadioGroup>
    </com.google.android.material.card.MaterialCardView>
    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"

        android:text="Next"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/question_text_view_n2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question 1"

        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_medium"

        android:textSize="20sp"/>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="12dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="1dp">
    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Result : "
        android:fontFamily="@font/montserrat_medium"
        android:textSize="18sp"
        android:textColor="@color/blue3"/>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
