            <TextView
                android:id="@+id/Stt"
                style="@style/viewParent.headerText.NoMode"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/montserrat"
                android:text="Start time"
                android:textColor="@color/blue3" />

            <TextView
                android:id="@+id/sttime"
                style="@style/viewParent.headerText.NoMode"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/montserrat"
                android:text="Loading..."
                android:textColor="@color/blue3"
                android:textSize="25sp" />

            <TextView
                style="@style/viewParent.headerText.NoMode"
                android:layout_width="346dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/montserrat"
                android:text="FocusTime(min)"
                android:textColor="@color/blue3"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/focustime"
                style="@style/viewParent.headerText.NoMode"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/montserrat"
                android:text="Loading..."
                android:textColor="@color/blue3"
                android:textSize="25sp" />

            <TextView
                style="@style/viewParent.headerText.NoMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/viewsMargin"
                android:fontFamily="@font/montserrat_medium"
                android:text="Description"
                android:textColor="@color/white"
                android:textSize="28sp" />



            <Button
                android:id="@+id/button"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_medium"
                android:onClick="op_cd"
                android:text="Open Count Down"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/habitdelete"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_medium"
                android:onClick="deletehabit"
                android:text="Delete Habit"
                android:textColor="@color/white" />


        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="3"
